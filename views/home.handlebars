<h1>Validater App</h1>

{{#each notes}}
  <div class="row">
    <div class="col-md-12">
      <h2>{{ title }}</h2>
      <p>{{ body }}</p>
    </div>

  </div>
{{/each}}
<div class="row">
  <div class="col-md-6">
    <h1>New User</h1>
    <form method="POST" action="/user">
      <div class="form-group">
        <label for="exampleInputEmail1">Title</label>
        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Name" name="name">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Phone Number</label>
        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Phone Number" name="number">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Body</label>
        <textarea name="body" rows="8" cols="40"></textarea>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
</div>